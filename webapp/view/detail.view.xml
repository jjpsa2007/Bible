<mvc:View xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" 
controllerName="Bible.controller.detail" xmlns:layout="sap.ui.layout">

<Page showHeader="true" id="detailPage">
<content>
<layout:VerticalLayout>
<layout:HorizontalLayout id="layout" allowWrapping="true" content="{item>/}">
<Button text="{item>pageNo}" class="sapUiTinyMarginBegin" press="onPressChapter"/>
</layout:HorizontalLayout>
</layout:VerticalLayout>
</content>
</Page>
</mvc:View>